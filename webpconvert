from PIL import Image
import os



def png_to_webp(png_path, webp_path):
    image = Image.open(png_path)
    image.save(webp_path, 'WebP')

# 이미지 경로
sticker_folder_path = './Gui/Useimages/sticker/'

if os.path.isdir(sticker_folder_path):
    count_sticker = len(os.listdir(sticker_folder_path))

for i in range(1, count_sticker+1):
    # 변환할 PNG 이미지의 경로와 파일명
    png_path = sticker_folder_path + str(i) + '.png'

    # WebP로 변환된 이미지를 저장할 경로와 파일명
    webp_path = sticker_folder_path + str(i) + '.webp'

    # PNG를 WebP로 변환
    png_to_webp(png_path, webp_path)
